int x = inputInt("Input integer: ");
int div;
int res;

if |x < 0| {
    res = -1;
} else {
    div = x / 2;
    res = x - div * 2;
}

flagIf [
    #even:    |res == 0|,
    #odd:     |res == 1|,
    #one:     |x == 0 + 1|,
    #bad_res: |res < 0|
] 
#even: {
    print(x, " is even\n");
}
#odd: {
    print(x, " is odd\n");
}
#bad_res: {
